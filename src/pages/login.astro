---
import Layout from '../layouts/Layout.astro';
import { Image } from "astro:assets";
import '../globals.css'
import '../grid.css'
---

<Layout title='Login - windUI' description=''>
	<section class="bg-white dark:bg-darker select-none">
		<div class="lg:grid lg:min-h-screen lg:grid-cols-12">
			<section class="relative flex h-32 items-end bg-gray-900 lg:col-span-5 lg:h-full xl:col-span-6">
				<img alt="Pattern"
					src="https://images.unsplash.com/photo-1550537687-c91072c4792d?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=3774&q=80"
					class="absolute inset-0 h-full w-full object-cover opacity-80 rotate-180" />

				<div class="hidden lg:relative lg:block lg:p-12">
					<a class="block text-white" href="/">
						<picture>
							<source media="(prefers-color-scheme: dark)" srcset="/svg/logo-light.svg">
							<source media="(prefers-color-scheme: light)" srcset="/svg/logo-dark.svg">
							<Image alt="windUI" src="/svg/logo-light.svg" width="150" height="70" style="max-width: 100%;">
						</picture>
					</a>

					<h2 class="mt-6 text-2xl text-white sm:text-3xl md:text-4xl drop-shadow-lg shadow-black font-[GilroyBold]">
						Welcome to Wind UI
					</h2>

					<p class="mt-4 leading-relaxed text-white/90 font-[GilroySemiBold] drop-shadow-lg shadow-black">
						Design and build your next idea more faster and more beautifully.
						Build the perfect starting point to breathe life into your next project, an endless source of creativity and
						stylistic perfection.
					</p>
				</div>
			</section>

			<main class="flex items-center justify-center px-8 py-8 lg:col-span-7 lg:py-12 xl:col-span-6 magicpattern">
				<div class="max-w-xl lg:max-w-3xl">
					<div class="relative -mt-16 block lg:hidden">
						<a class="inline-flex h-16 w-16 items-center justify-center rounded-full bg-white text-blue-600 sm:h-20 sm:w-20"
							href="/">
							<picture>
								<source media="(prefers-color-scheme: dark)" srcset="/svg/windui.svg">
								<source media="(prefers-color-scheme: light)" srcset="/svg/windui.svg">
								<Image alt="windUI" src="/svg/windui.svg" width="150" height="70"
									style="max-width: 80%; display: flex; justify-content; center; align-items: center; margin-left: 5px;">
							</picture>
						</a>

						<h1 class="mt-2 text-2xl font-bold text-white sm:text-3xl md:text-4xl">
							Welcome to windUI
						</h1>

						<p class="mt-4 leading-relaxed text-gray-500 font-[GilroySemiBold] drop-shadow-lg text-sm shadow-black">
							Design and build your next idea more faster and more beautifully.
							Build the perfect starting point to breathe life into your next project, an endless source of creativity
							and stylistic perfection.
						</p>
					</div>


					<form action="#" method='POST' class="mt-8 grid grid-cols-6 gap-6">
						<div class="col-span-6">
							<label for="Email" class="block text-sm font-medium text-gray-700 dark:text-gray-100 font-[GilroyBold]">
								Email
							</label>

							<input type="email" id="Email" name="email"
								class="mt-1 md:w-[600px] w-full rounded-md border-gray-200 px-2 font-[GilroyRegular] bg-white text-sm text-gray-700 shadow-sm py-2 border-[1px]" />
						</div>

						<div class="col-span-6 sm:col-span-3">
							<label for="Password"
								class="block text-sm font-medium text-gray-700 dark:text-gray-100 font-[GilroyBold]">
								Password
							</label>

							<input type="password" id="Password" name="password"
								class="mt-1 w-full rounded-md border-gray-200 px-2 font-[GilroyRegular] bg-white text-sm text-gray-700 shadow-sm py-2 border-[1px]" />
						</div>

						<div class="col-span-6 sm:col-span-3">
							<label for="PasswordConfirmation"
								class="block text-sm font-medium text-gray-700 dark:text-gray-100 font-[GilroyBold]">
								Password Confirmation
							</label>

							<input type="password" id="PasswordConfirmation" name="password_confirmation"
								class="mt-1 w-full rounded-md border-gray-200 px-2 font-[GilroyRegular] bg-white text-sm text-gray-700 shadow-sm py-2 border-[1px]" />
						</div>

						<div class="col-span-6 sm:flex sm:items-center sm:gap-4 flex-col">
							<button
								class="inline-block w-full shrink-0 rounded-md font-[GilroyBold] button-gradient px-12 py-3 text-sm font-medium text-white transition hover:bg-transparent focus:outline-none focus:ring active:text-purple-500">
								Sign in to account
							</button>
							<footer class='pt-32 flex justify-center items-center'>
								<p class="mt-4 text-sm text-gray-500 sm:mt-0 font-[GilroyRegular]">
									Don't have an account? &nbsp;
									<a href="/all-access"
										class="text-gray-700 dark:text-gray-100 font-[GilroySemiBold] bg-white dark:bg-darker border-[1px] border-gray-200 hover:border-gray-400 rounded-lg py-2 px-4">Get
										access â†’</a>
								</p>
							</footer>
						</div>
					</form>
				</div>
			</main>
		</div>
	</section>

</Layout>